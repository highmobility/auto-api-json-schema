{
    "$id": "https://highmobility.github.io/auto-api-json-schema/L13/lights.schema.json",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "front_exterior_light": { "$ref": "#/$defs/property_front_exterior_light" },
        "rear_exterior_light": { "$ref": "#/$defs/property_active_state" },
        "ambient_light_colour": { "$ref": "#/$defs/property_rgb_colour" },
        "reverse_light": { "$ref": "#/$defs/property_active_state" },
        "emergency_brake_light": { "$ref": "#/$defs/property_active_state" },
        "fog_lights": { "$ref": "#/$defs/property_light" },
        "reading_lamps": { "$ref": "#/$defs/property_reading_lamp" },
        "interior_lights": { "$ref": "#/$defs/property_light" },
        "switch_position": { "$ref": "#/$defs/property_switch_position" },
        "parking_light_status": { "$ref": "#/$defs/property_parking_light_status" },

        "nonce": { "$ref": "#/$defs/property_nonce" },
        "vin": { "$ref": "#/$defs/property_vin" }
    },
    "additionalProperties": false,



    "$defs": {
        "property": {
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "failure": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/failure" },
                "availability": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/availability" }
            },
            "minProperties": 1
        },


        "property_active_state": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/active_state"
                }
            }
        },

        "property_front_exterior_light": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["inactive", "active", "active_with_full_beam", "drl", "automatic"]
                }
            }
        },

        "property_light": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/light"
                }
            }
        },

        "property_nonce": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                    },
                    "minItems": 9,
                    "maxItems": 9
                }
            }
        },

        "property_parking_light_status": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["off", "left", "right", "both"]
                }
            }
        },

        "property_reading_lamp": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/reading_lamp"
                }
            }
        },

        "property_rgb_colour": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/rgb_colour"
                }
            }
        },

        "property_switch_position": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["automatic", "dipped_headlights", "parking_light_right", "parking_light_left", "sidelights"]
                }
            }
        },

        "property_vin": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "minLength": 17,
                    "maxLength": 17
                }
            }
        }
    }
}
