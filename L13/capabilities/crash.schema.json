{
    "$id": "https://highmobility.github.io/auto-api-json-schema/L13/capabilities/crash.schema.json",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "incidents": { "$ref": "#/$defs/property_crash_incident" },
        "type": { "$ref": "#/$defs/property_type" },
        "tipped_state": { "$ref": "#/$defs/property_tipped_state" },
        "automatic_ecall": { "$ref": "#/$defs/property_enabled_state" },
        "severity": { "$ref": "#/$defs/property_uinteger" },
        "impact_zone": { "$ref": "#/$defs/property_impact_zone" },

        "nonce": { "$ref": "#/$defs/property_nonce" },
        "vin": { "$ref": "#/$defs/property_vin" }
    },
    "additionalProperties": false,


    "$defs": {
        "property": {
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "failure": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/failure" },
                "availability": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/availability" }
            },
            "minProperties": 1
        },

        "property_crash_incident": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/crash_incident"
                }
            }
        },

        "property_enabled_state": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/enabled_state"
                }
            }
        },

        "property_impact_zone": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["pedestrian_protection", "rollover", "rear_passenger_side", "rear_driver_side", "side_passeger_side", "side_driver_side", "front_passenger_side", "front_driver_side"]
                }
            }
        },

        "property_nonce": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                    },
                    "minItems": 9,
                    "maxItems": 9
                }
            }
        },

        "property_tipped_state": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["tipped_over", "not_tipped"]
                }
            }
        },

        "property_type": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["pedestrian", "non_pedestrian"]
                }
            }
        },

        "property_uinteger": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 255
                }
            }
        },

        "property_vin": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "minLength": 17,
                    "maxLength": 17
                }
            }
        }
    }
}
