{
    "$id": "https://highmobility.github.io/auto-api-json-schema/L13/windscreen.schema.json",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "wipers_status": { "$ref": "#/$defs/property_wipers_status" },
        "wipers_intensity": { "$ref": "#/$defs/property_wipers_intensity" },
        "windscreen_damage": { "$ref": "#/$defs/property_windscreen_damage" },
        "windscreen_zone_matrix": { "$ref": "#/$defs/property_zone" },
        "windscreen_damage_zone": { "$ref": "#/$defs/property_zone" },
        "windscreen_needs_replacement": { "$ref": "#/$defs/property_windscreen_needs_replacement" },
        "windscreen_damage_confidence": { "$ref": "#/$defs/property_percentage" },
        "windscreen_damage_detection_time": { "$ref": "#/$defs/property_timestamp" },

        "nonce": { "$ref": "#/$defs/property_nonce" },
        "vin": { "$ref": "#/$defs/property_vin" }
    },
    "additionalProperties": false,


    "$defs": {
        "property": {
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "failure": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/failure" },
                "availability": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/availability" }
            },
            "minProperties": 1
        },

        "property_nonce": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                    },
                    "minItems": 9,
                    "maxItems": 9
                }
            }
        },

        "property_percentage": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/percentage"
                }
            }
        },

        "property_timestamp": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },

        "property_vin": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "minLength": 17,
                    "maxLength": 17
                }
            }
        },

        "property_windscreen_damage": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["no_impact_detected", "impact_but_no_damage_detected", "damage_smaller_than_1_inch", "damage_larger_than_1_inch"]
                }
            }
        },

        "property_windscreen_needs_replacement": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["unknown", "no_replacement_needed", "replacement_needed"]
                }
            }
        },

        "property_wipers_intensity": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["level_0", "level_1", "level_2", "level_3"]
                }
            }
        },

        "property_wipers_status": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["inactive", "active", "automatic"]
                }
            }
        },

        "property_zone": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/zone"
                }
            }
        }
    }
}
