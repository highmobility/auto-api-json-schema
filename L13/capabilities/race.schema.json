{
    "$id": "https://highmobility.github.io/auto-api-json-schema/L13/race.schema.json",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "accelerations": { "$ref": "#/$defs/property_acceleration" },
        "understeering": { "$ref": "#/$defs/property_percentage" },
        "oversteering": { "$ref": "#/$defs/property_percentage" },
        "gas_pedal_position": { "$ref": "#/$defs/property_percentage" },
        "steering_angle": { "$ref": "#/$defs/property_angle" },
        "brake_pressure": { "$ref": "#/$defs/property_pressure" },
        "yaw_rate": { "$ref": "#/$defs/property_angular_velocity" },
        "rear_suspension_steering": { "$ref": "#/$defs/property_angle" },
        "electronic_stability_program": { "$ref": "#/$defs/property_active_state" },
        "brake_torque_vectorings": { "$ref": "#/$defs/property_brake_torque_vectoring" },
        "gear_mode": { "$ref": "#/$defs/property_gear_mode" },
        "selected_gear": { "$ref": "#/$defs/property_integer" },
        "brake_pedal_position": { "$ref": "#/$defs/property_percentage" },
        "brake_pedal_switch": { "$ref": "#/$defs/property_active_state" },
        "clutch_pedal_switch": { "$ref": "#/$defs/property_active_state" },
        "accelerator_pedal_idle_switch": { "$ref": "#/$defs/property_active_state" },
        "accelerator_pedal_kickdown_switch": { "$ref": "#/$defs/property_active_state" },
        "vehicle_moving": { "$ref": "#/$defs/property_vehicle_moving" },

        "nonce": { "$ref": "#/$defs/property_nonce" },
        "vin": { "$ref": "#/$defs/property_vin" }
    },
    "additionalProperties": false,


    "$defs": {
        "property": {
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "failure": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/failure" },
                "availability": { "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/availability" }
            },
            "minProperties": 1
        },

        "property_acceleration": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/acceleration"
                }
            }
        },

        "property_active_state": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/active_state"
                }
            }
        },

        "property_angle": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/units.schema.json#/$defs/angle"
                }
            }
        },

        "property_angular_velocity": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/units.schema.json#/$defs/angular_velocity"
                }
            }
        },

        "property_brake_torque_vectoring": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/brake_torque_vectoring"
                }
            }
        },

        "property_gear_mode": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["manual", "park", "reverse", "neutral", "drive", "low_gear", "sport"]
                }
            }
        },

        "property_integer": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "integer",
                    "minimum": -128,
                    "maximum": 127
                }
            }
        },

        "property_nonce": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                    },
                    "minItems": 9,
                    "maxItems": 9
                }
            }
        },

        "property_percentage": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/custom_types.schema.json#/$defs/percentage"
                }
            }
        },

        "property_pressure": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "$ref": "/auto-api-json-schema/L13/misc/units.schema.json#/$defs/pressure"
                }
            }
        },

        "property_vehicle_moving": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["not_moving", "moving"]
                }
            }
        },

        "property_vin": {
            "$ref": "#/$defs/property",
            "properties": {
                "data": {
                    "type": "string",
                    "minLength": 17,
                    "maxLength": 17
                }
            }
        }
    }
}
