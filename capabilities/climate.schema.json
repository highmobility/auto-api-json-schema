{
    "$id": "https://high-mobility.com/schemas/climate",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "inside_temperature": { "$ref": "/schemas/property/temperature" },
        "outside_temperature": { "$ref": "/schemas/property/temperature" },
        "driver_temperature_setting": { "$ref": "/schemas/property/temperature" },
        "passenger_temperature_setting": { "$ref": "/schemas/property/temperature" },
        "hvac_state": { "$ref": "/schemas/property/active_state" },
        "defogging_state": { "$ref": "/schemas/property/active_state" },
        "defrosting_state": { "$ref": "/schemas/property/active_state" },
        "ionising_state": { "$ref": "/schemas/property/active_state" },
        "defrosting_temperature_setting": { "$ref": "/schemas/property/temperature" },
        "hvac_weekday_starting_times": { "$ref": "/schemas/property/hvac_weekday_starting_time" },
        "rear_temperature_setting": { "$ref": "/schemas/property/temperature" },

        "nonce": { "$ref": "/schemas/property/nonce" },
        "vin": { "$ref": "/schemas/property/vin" }
    },
    "additionalProperties": false,



    "$defs": {
        "property": {
            "$id": "/schemas/property",
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "failure": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/failure"
                },
                "availability": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/availability"
                }
            },
            "minProperties": 1
        },


        "property_active_state": {
            "$id": "/schemas/property/active_state",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/active_state"
                }
            }
        },

        "property_bytes": {
            "$id": "/schemas/property/bytes",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/bytes"
                }
            }
        },

        "property_hvac_weekday_starting_time": {
            "$id": "/schemas/property/hvac_weekday_starting_time",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/hvac_weekday_starting_time"
                }
            }
        },

        "property_nonce": {
            "$id": "/schemas/property/nonce",
            "$ref": "/schemas/property/bytes",
            "properties": {
                "data": {
                    "minItems": 9,
                    "maxItems": 9
                }
            }
        },

        "property_temperature": {
            "$id": "/schemas/property/temperature",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/units.schema.json#/$defs/temperature"
                }
            }
        },

        "property_vin": {
            "$id": "/schemas/property/vin",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "minLength": 17,
                    "maxLength": 17
                }
            }
        }
    }
}
