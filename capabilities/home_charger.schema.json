{
    "$id": "https://high-mobility.com/schemas/home_charger",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "charging_status": { "$ref": "/schemas/property/charging_status" },
        "authentication_mechanism": { "$ref": "/schemas/property/authentication_mechanism" },
        "plug_type": { "$ref": "/schemas/property/plug_type" },
        "charging_power_kw": {
            "$ref": "/schemas/property/power",
            "deprecated": true
        },
        "solar_charging": { "$ref": "/schemas/property/active_state" },
        "wi_fi_hotspot_enabled": { "$ref": "/schemas/property/enabled_state" },
        "wi_fi_hotspot_ssid": { "$ref": "/schemas/property/string" },
        "wi_fi_hotspot_security": { "$ref": "/schemas/property/network_security" },
        "wi_fi_hotspot_password": { "$ref": "/schemas/property/string" },
        "authentication_state": { "$ref": "/schemas/property/authentication_state" },
        "charge_current": { "$ref": "/schemas/property/electric_current" },
        "maximum_charge_current": { "$ref": "/schemas/property/electric_current" },
        "minimum_charge_current": { "$ref": "/schemas/property/electric_current" },
        "coordinates": { "$ref": "/schemas/property/coordinates" },
        "price_tariffs": { "$ref": "/schemas/property/price_tariff" },
        "charging_power": { "$ref": "/schemas/property/power" },

        "nonce": { "$ref": "/schemas/property/nonce" },
        "vin": { "$ref": "/schemas/property/vin" }
    },
    "additionalProperties": false,



    "$defs": {
        "property": {
            "$id": "/schemas/property",
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "failure": { "$ref": "https://gist.githubusercontent.com/doofyus/a1c290dcf40c99296c54da2fcce8962d/raw/6308e26cbf0b536a3358900f8c6009c3b8b1979c/custom_types.schema.json#/$defs/failure" },
                "availability": { "$ref": "https://gist.githubusercontent.com/doofyus/a1c290dcf40c99296c54da2fcce8962d/raw/6308e26cbf0b536a3358900f8c6009c3b8b1979c/custom_types.schema.json#/$defs/availability" }
            },
            "minProperties": 1
        },


        "property_active_state": {
            "$id": "/schemas/property/active_state,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/active_state"
                }
            }
        },

        "property_authentication_mechanism": {
            "$id": "/schemas/property/authentication_mechanism,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["pin", "app"]
                }
            }
        },

        "property_authentication_state": {
            "$id": "/schemas/property/authentication_state,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["unauthenticated", "authenticated"]
                }
            }
        },

        "property_bytes": {
            "$id": "/schemas/property/bytes",
            "$ref": "/schemas/property",
            "properties": {
                "data": { "$ref": "https://gist.githubusercontent.com/doofyus/a1c290dcf40c99296c54da2fcce8962d/raw/6308e26cbf0b536a3358900f8c6009c3b8b1979c/custom_types.schema.json#/$defs/bytes" }
            }
        },

        "property_charging_status": {
            "$id": "/schemas/property/charging_status,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["disconnected", "plugged_in", "charging"]
                }
            }
        },

        "property_coordinates": {
            "$id": "/schemas/property/coordinates,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/coordinates"
                }
            }
        },

        "property_electric_current": {
            "$id": "/schemas/property/electric_current,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/units.schema.json#/$defs/electric_current"
                }
            }
        },

        "property_enabled_state": {
            "$id": "/schemas/property/enabled_state,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/enabled_state"
                }
            }
        },

        "property_network_security": {
            "$id": "/schemas/property/network_security,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/network_security"
                }
            }
        },

        "property_nonce": {
            "$id": "/schemas/property/nonce",
            "$ref": "/schemas/property/bytes",
            "properties": {
                "data": {
                    "minItems": 9,
                    "maxItems": 9
                }
            }
        },

        "property_plug_type": {
            "$id": "/schemas/property/plug_type,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["type_1", "type_2", "ccs", "chademo"]
                }
            }
        },

        "property_power": {
            "$id": "/schemas/property/power,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/units.schema.json#/$defs/power"
                }
            }
        },

        "property_price_tariff": {
            "$id": "/schemas/property/price_tariff,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/price_tariff"
                }
            }
        },

        "property_string": {
            "$id": "/schemas/property/string,
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string"
                }
            }
        },

        "property_vin": {
            "$id": "/schemas/property/vin",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "minLength": 17,
                    "maxLength": 17
                }
            }
        }
    }
}
