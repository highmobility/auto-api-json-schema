{
    "$id": "https://high-mobility.com/schemas/chassis_settings",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "properties": {
        "driving_mode": { "$ref": "/schemas/property/driving_mode" },
        "sport_chrono": { "$ref": "/schemas/property/sport_chrono" },
        "current_spring_rates": { "$ref": "/schemas/property/spring_rate" },
        "maximum_spring_rates": { "$ref": "/schemas/property/spring_rate" },
        "minimum_spring_rates": { "$ref": "/schemas/property/spring_rate" },
        "current_chassis_position": { "$ref": "/schemas/property/length" },
        "maximum_chassis_position": { "$ref": "/schemas/property/length" },
        "minimum_chassis_position": { "$ref": "/schemas/property/length" },

        "nonce": { "$ref": "/schemas/property/nonce" },
        "vin": { "$ref": "/schemas/property/vin" }
    },
    "additionalProperties": false,



    "$defs": {
        "property": {
            "$id": "/schemas/property",
            "type": "object",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "failure": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/failure"
                },
                "availability": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/availability"
                }
            },
            "minProperties": 1
        },


        "property_bytes": {
            "$id": "/schemas/property/bytes",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/bytes"
                }
            }
        },

        "property_driving_mode": {
            "$id": "/schemas/property/driving_mode",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/driving_mode"
                }
            }
        },

        "property_length": {
            "$id": "/schemas/property/length",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/units.schema.json#/$defs/length"
                }
            }
        },

        "property_nonce": {
            "$id": "/schemas/property/nonce",
            "$ref": "/schemas/property/bytes",
            "properties": {
                "data": {
                    "minItems": 9,
                    "maxItems": 9
                }
            }
        },

        "property_sport_chrono": {
            "$id": "/schemas/property/sport_chrono",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "enum": ["inactive", "active", "reset"]
                }
            }
        },

        "property_spring_rate": {
            "$id": "/schemas/property/spring_rate",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "$ref": "https://raw.githubusercontent.com/highmobility/auto-api-json-schema/main/misc/custom_types.schema.json#/$defs/spring_rate"
                }
            }
        },

        "property_vin": {
            "$id": "/schemas/property/vin",
            "$ref": "/schemas/property",
            "properties": {
                "data": {
                    "type": "string",
                    "minLength": 17,
                    "maxLength": 17
                }
            }
        }
    }
}
